{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "airbnb-base",
        "stylelint-config-standard-scss"
    ],
    "rules": {
        "no-shadow": "off",
        "no-param-reassign": "off",
        "eol-last": "off",
        "import/extensions": [
            1,
            {
                "js": "always",
                "json": "always"
            }
        ],
        "no-unused-expressions": [
            "error",
            {
                "allowTernary": true
            }
        ],
        "no-restricted-syntax": [
            "error",
            "BinaryExpression[operator='in']"
        ]
    },
    "ignorePatterns": [
        "dist/",
        "build/"
    ]
}